

{{ section.settings.liquid-range }}

<!-- set a variable  -->

{% assign blog = section.settings.new-blog %}



{% unless blog.articles_count == 0 %}
     
 <div class="page-width">
    <div class="grid grid--uniform grid--blog"> 

    
    {% for article in blog.articles limit: section.settings.posts-range %}

        <div class="grid__item medium-up--one-third">
            <a href="{{article.url}} ">
                {{ article.title }}
            </a>
            <br/>
        </div>

        
    {% endfor %}
</div>
</div>
{% endunless %}


{% schema %}

{
    "name": "New Blog Posts ",
    "settings": [
        {
    
                "id": "posts-range",
                "label":  "Range" ,
                "type": "range",
                "min": 2,
                "max": 12,
                "step": 2,
                
                "default": 6
        },
        {
            "id": "new-blog",
            "label":  "Blog" ,
            "type": "blog"
        }

    ],



    "presets": [
    {
        "name": "New Blog Posts",
        "category": "Posts"
    }
    ]

}
{% endschema %}